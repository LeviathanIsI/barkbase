{
  "threshold": 10,
  "reporters": ["html", "console", "json"],
  "ignore": [
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/coverage/**",
    "**/*.min.js",
    "**/*.min.css",
    "**/package-lock.json",
    "**/pnpm-lock.yaml",
    "**/*.md",
    "**/aws/lambdas/**/index.js"
  ],
  "absolute": true,
  "gitignore": true,
  "format": [
    "javascript",
    "jsx",
    "typescript",
    "tsx"
  ],
  "minLines": 10,
  "minTokens": 50,
  "output": "./jscpd-report",
  "exitCode": 1
}

