# ============================================================================
# BARKBASE FRONTEND - ENVIRONMENT VARIABLES TEMPLATE
# ============================================================================
# Copy this file to .env.development or .env.production and fill in values
# All variables must be prefixed with VITE_ to be exposed to the frontend
# NEVER commit actual secrets or sensitive URLs to version control
# ============================================================================

# ----------------------------------------------------------------------------
# API CONFIGURATION
# ----------------------------------------------------------------------------
# Backend API URL (CloudFront distribution or API Gateway)
VITE_API_URL=https://api.yourdomain.com

# CloudFront distribution URL (for static assets, if separate)
VITE_CLOUDFRONT_URL=https://cdn.yourdomain.com

# ----------------------------------------------------------------------------
# AWS COGNITO - Authentication
# ----------------------------------------------------------------------------
VITE_COGNITO_USER_POOL_ID=us-east-2_XXXXXXXXX
VITE_COGNITO_CLIENT_ID=your-client-id
VITE_COGNITO_DOMAIN=your-domain.auth.us-east-2.amazoncognito.com
VITE_COGNITO_REGION=us-east-2

# OAuth redirect URI (must match Cognito app client settings)
VITE_REDIRECT_URI=https://app.yourdomain.com/auth/callback

# Auth mode: 'cognito' for production, 'mock' for local development
VITE_AUTH_MODE=cognito

# ----------------------------------------------------------------------------
# STRIPE - Payment Processing (Public Key Only!)
# ----------------------------------------------------------------------------
# NOTE: Only publishable key goes in frontend - NEVER the secret key
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key

# ----------------------------------------------------------------------------
# FEATURE FLAGS
# ----------------------------------------------------------------------------
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_CHAT_SUPPORT=false
VITE_ENABLE_DARK_MODE=true

# ----------------------------------------------------------------------------
# APPLICATION SETTINGS
# ----------------------------------------------------------------------------
# Application name displayed in UI
VITE_APP_NAME=Barkbase

# Default locale
VITE_DEFAULT_LOCALE=en-US

# Default timezone (for date display)
VITE_DEFAULT_TIMEZONE=America/New_York

# Maximum file upload size in bytes (10MB)
VITE_MAX_UPLOAD_SIZE=10485760

# ----------------------------------------------------------------------------
# THIRD-PARTY INTEGRATIONS (Optional)
# ----------------------------------------------------------------------------
# Google Maps API key (for location features)
VITE_GOOGLE_MAPS_API_KEY=

# Sentry DSN (for error tracking)
VITE_SENTRY_DSN=

# PostHog (for analytics)
VITE_POSTHOG_KEY=
VITE_POSTHOG_HOST=

# ----------------------------------------------------------------------------
# DEVELOPMENT / TESTING
# ----------------------------------------------------------------------------
# Enable debug mode (shows extra info in console)
VITE_DEBUG_MODE=false

# Mock data mode (uses local mock data instead of API)
VITE_MOCK_API=false
