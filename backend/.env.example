# ============================================================================
# BARKBASE BACKEND - ENVIRONMENT VARIABLES TEMPLATE
# ============================================================================
# Copy this file to .env.development or .env.production and fill in values
# NEVER commit actual secrets to version control
# For Lambda deployments, these are set via SAM template or AWS Console
# ============================================================================

# ----------------------------------------------------------------------------
# DATABASE
# ----------------------------------------------------------------------------
# PostgreSQL connection string (RDS)
DATABASE_URL=postgresql://barkbase_admin:<PASSWORD>@<RDS_ENDPOINT>:5432/<DATABASE_NAME>

# Connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# ----------------------------------------------------------------------------
# AWS CONFIGURATION
# ----------------------------------------------------------------------------
AWS_REGION=us-east-2

# S3 bucket for file uploads
S3_BUCKET=barkbase-uploads-production

# SES configuration for emails
SES_FROM_EMAIL=noreply@yourdomain.com
SES_REPLY_TO_EMAIL=support@yourdomain.com

# CloudFront distribution ID (for cache invalidation)
CLOUDFRONT_DISTRIBUTION_ID=EXXXXXXXXXX

# ----------------------------------------------------------------------------
# COGNITO - Authentication
# ----------------------------------------------------------------------------
COGNITO_USER_POOL_ID=us-east-2_XXXXXXXXX
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx

# ----------------------------------------------------------------------------
# STRIPE - Payment Processing
# ----------------------------------------------------------------------------
# Secret key - NEVER expose in frontend
STRIPE_SECRET_KEY=sk_live_your-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Connected account settings
STRIPE_PLATFORM_FEE_PERCENT=2.5

# ----------------------------------------------------------------------------
# TWILIO - SMS Notifications
# ----------------------------------------------------------------------------
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+15551234567

# ----------------------------------------------------------------------------
# RATE LIMITING
# ----------------------------------------------------------------------------
# DynamoDB table for rate limiting
RATE_LIMIT_TABLE=barkbase-rate-limits

# ----------------------------------------------------------------------------
# LOGGING & MONITORING
# ----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# Sentry DSN for backend error tracking
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# ----------------------------------------------------------------------------
# APPLICATION SETTINGS
# ----------------------------------------------------------------------------
# Environment name
NODE_ENV=production

# API version prefix
API_VERSION=v1

# CORS allowed origins (comma-separated)
CORS_ORIGINS=https://app.yourdomain.com

# JWT token expiry (seconds)
JWT_EXPIRY=3600

# File upload limits (bytes)
MAX_FILE_SIZE=10485760

# ----------------------------------------------------------------------------
# FEATURE FLAGS
# ----------------------------------------------------------------------------
ENABLE_WEBHOOKS=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_AUDIT_LOGGING=true

# ----------------------------------------------------------------------------
# ENCRYPTION
# ----------------------------------------------------------------------------
# KMS key ID for encrypting sensitive data
KMS_KEY_ID=arn:aws:kms:us-east-2:123456789:key/xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# ----------------------------------------------------------------------------
# CACHING
# ----------------------------------------------------------------------------
# ElastiCache endpoint (optional)
REDIS_URL=redis://your-elasticache-endpoint:6379

# Cache TTL in seconds
CACHE_TTL=300
