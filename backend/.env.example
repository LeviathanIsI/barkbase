NODE_ENV=development
PORT=4000
HOST=0.0.0.0

# ---------- Supabase database configuration ----------
SUPABASE_DB_NAME=postgres
SUPABASE_SSLMODE=require

# Development (direct Postgres 5432)
DEV_DATABASE_URL="postgresql://postgres:<urlencoded_pwd>@db.<project>.supabase.co:5432/${SUPABASE_DB_NAME}?sslmode=${SUPABASE_SSLMODE}"

# Production/Staging (PgBouncer 6543)
PROD_DATABASE_URL="postgresql://postgres.<poolerUser>:<urlencoded_pwd>@aws-<region>.pooler.supabase.com:6543/${SUPABASE_DB_NAME}?sslmode=${SUPABASE_SSLMODE}&pgbouncer=true&connection_limit=1"

# Prisma migrate/shadow (always direct)
DIRECT_URL="postgresql://postgres:<urlencoded_pwd>@db.<project>.supabase.co:5432/${SUPABASE_DB_NAME}?sslmode=${SUPABASE_SSLMODE}"
SHADOW_DATABASE_URL="postgresql://postgres:<urlencoded_pwd>@db.<project>.supabase.co:5432/${SUPABASE_DB_NAME}?sslmode=${SUPABASE_SSLMODE}"

DATABASE_PROVIDER=postgresql
DB_TUNE_ON_BOOT=false
DB_INTEGRITY_CHECK=false
HTTP_DEFAULT_TIMEOUT_MS=10000
HTTP_MAX_RETRIES=2
REFRESH_TOKEN_TTL_DAYS=7
ACCESS_TOKEN_TTL_MINUTES=30
JWT_SECRET=change-me
JWT_REFRESH_SECRET=change-me-too
CORS_ALLOWED_ORIGINS=http://localhost:5173
EMAIL_PROVIDER=smtp
EMAIL_FROM=no-reply@barkbase.local
SMTP_HOST=localhost
SMTP_PORT=1025
UPLOADS_ROOT=./uploads
TENANT_DEFAULT_SLUG=default
BASE_DOMAIN=myapp.local
TENANT_ALLOWED_HOSTS=localhost,127.0.0.1

# Hosted BarkBase Cloud defaults
HOSTED_DATABASE_URL=
HOSTED_STORAGE_S3_BUCKET=
HOSTED_STORAGE_S3_REGION=
HOSTED_STORAGE_S3_ACCESS_KEY_ID=
HOSTED_STORAGE_S3_SECRET_ACCESS_KEY=
DATA_ROOT=./uploads

# BYO encryption key (32-byte hex for AES-256-GCM)
BYO_KMS_KEY_HEX=
