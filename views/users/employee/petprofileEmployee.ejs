<%- include("../../partials/header.ejs") %>
    <%- include("../../partials/employeeNav.ejs") %>

        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="bg-light p-5 rounded shadow pet-card">
                        <div class="pet-image-wrapper">
                            <% if (pet.image) { %>
                                <img src="/<%= pet.image %>" class="pet-image" alt="<%= pet.name %>">
                                <% } %>
                        </div>
                        <div class="text-center mt-4">
                            <h2 class="first-text">
                                <%= pet.name %>
                            </h2>
                            <p><strong>Species:</strong>
                                <%= pet.species %>
                            </p>
                            <p><strong>Breed:</strong>
                                <%= pet.breed %>
                            </p>
                            <p><strong>Age:</strong>
                                <%= pet.age %> years
                            </p>
                            <p><strong>Weight:</strong>
                                <%= pet.weight %> lbs
                            </p>
                            <p><strong>Medications:</strong>
                                <%= pet.medications %>
                            </p>
                            <p><strong>Special Needs:</strong>
                                <%= pet.specialNeeds %>
                            </p>
                            <p><strong>Feeding Instructions:</strong>
                                <%= pet.feedingInstructions %>
                            </p>
                            <p><strong>Behavior:</strong>
                                <%= pet.behavior %>
                            </p>
                            <p><strong>Last Vet Visit:</strong>
                                <%= pet.lastVetVisit %>
                            </p>
                            <p><strong>Next Vet Visit:</strong>
                                <%= pet.nextVetVisit %>
                            </p>
                        </div>
                        <div class="text-center mt-4">
                            <a href="/employee/pets/<%= pet._id %>/edit" class="btn btn-primary">Edit Information</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include("../../partials/footer.ejs") %>