<%- include("../../partials/header.ejs") %>
    <%- include("../../partials/employeeNav.ejs") %>

        <div class="container mt-5">
            <h2 class="mb-4 text-center">Guest Information</h2>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Guest Details</h5>
                    <p class="card-text"><strong>First Name:</strong>
                        <%= guest.firstName %>
                    </p>
                    <p class="card-text"><strong>Last Name:</strong>
                        <%= guest.lastName %>
                    </p>
                    <p class="card-text"><strong>Email:</strong>
                        <%= guest.email %>
                    </p>
                    <p class="card-text"><strong>Address:</strong>
                        <%= guest.address %>
                    </p>
                    <p class="card-text"><strong>City:</strong>
                        <%= guest.city %>
                    </p>
                    <p class="card-text"><strong>State:</strong>
                        <%= guest.state %>
                    </p>
                    <p class="card-text"><strong>Zip:</strong>
                        <%= guest.zip %>
                    </p>
                    <h6 class="mt-4">Registered Pets</h6>
                    <% if (guest.pets && guest.pets.length> 0) { %>
                        <ul>
                            <% guest.pets.forEach(function(pet) { %>
                                <li class="py-2">
                                    <%= pet.name %> - <%= pet.species %>
                                            <a href="/employee/pets/<%= pet._id %>" class="btn btn-info btn-sm">View</a>
                                            <form action="/employee/pets/<%= pet._id %>/add" method="POST"
                                                style="display: inline;">
                                                <input type="hidden" name="petId" value="<%= pet._id %>">
                                                <button type="submit" class="btn btn-warning btn-sm">Add to my
                                                    care</button>
                                            </form>
                                </li>
                                <% }); %>
                        </ul>
                        <% } else { %>
                            <p>No registered pets.</p>
                            <% } %>
                </div>
            </div>
        </div>

        <% include("../../partials/footer.ejs") %>

            <!-- Check out MOMENT for date formatting -->